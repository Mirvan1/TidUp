<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.fragProfile">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:background="#fff"
      >
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/profpName"
               android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:text=""
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="50sp" />
             <ProgressBar
                 android:layout_width="wrap_content"
                 android:layout_height="60dp"
                 android:id="@+id/profProgress"
                 android:layout_marginLeft="40dp"
                 android:layout_marginTop="40dp"
                 />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/profFullName"
            android:layout_marginStart="170dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text=""
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeTextType="uniform"
            android:textSize="40sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/profCompanyName"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="75dp"
            android:textColor="#000000"
            android:text=""
            android:textSize="30sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="181dp"
        android:background="@android:color/darker_gray" />

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        >-->
    <RelativeLayout
        android:id="@+id/editProfLayout"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginTop="195dp"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        >

        <ImageView
            android:id="@+id/itemPhoto"
            android:layout_width="72dp"
            android:layout_height="63dp"
            android:layout_gravity="left"
            android:layout_marginStart="0dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="202dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_profile" />

        <TextView
            android:id="@+id/iteame"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="129dp"
            android:layout_marginBottom="20dp"
            android:text="Edit Profile"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="30sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="278dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="35dp"
        android:background="@android:color/darker_gray" />
    <RelativeLayout
        android:id="@+id/exportData"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginTop="295dp"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        >

        <ImageView
            android:id="@+id/itdemPhoto"
            android:layout_width="72dp"
            android:layout_height="63dp"
            android:layout_gravity="left"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="202dp"
            android:layout_marginRight="282dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_export" />

        <TextView
            android:id="@+id/ieame"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            android:layout_marginBottom="20dp"
            android:text="Export Data"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="378dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="35dp"
        android:background="@android:color/darker_gray" />
    <RelativeLayout
        android:id="@+id/importData"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginTop="385dp"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        >

        <ImageView

            android:layout_width="72dp"
            android:layout_height="63dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="left"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="202dp"
            android:layout_marginRight="282dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_invite" />

        <TextView
                android:id="@+id/tvImport"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="129dp"
            android:textColor="#000000"
            android:layout_marginBottom="0dp"
            android:text="Invite to Company"
            android:textStyle="bold"
            android:textSize="25sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="478dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="35dp"
        android:background="@android:color/darker_gray" />
    <RelativeLayout
        android:id="@+id/assignManager"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginTop="485dp"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        >

        <ImageView

            android:layout_width="72dp"
            android:layout_height="63dp"
            android:layout_gravity="left"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="202dp"
            android:layout_marginRight="282dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_assign" />

        <TextView
            android:id="@+id/tvassignManager"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            android:textColor="#000000"
            android:layout_marginLeft="129dp"
            android:layout_marginBottom="20dp"
            android:text="Assign Manager"
            android:textStyle="bold"
            android:textSize="25sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="35dp"
        android:layout_marginVertical="578dp"
        android:background="@android:color/darker_gray" />
    <RelativeLayout
        android:id="@+id/signOut"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginTop="585dp"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        >

        <ImageView

            android:layout_width="72dp"
            android:layout_height="63dp"
            android:layout_gravity="left"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="202dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_sign_out" />

        <TextView
            android:id="@+id/tvsignOut"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="129dp"
            android:layout_marginBottom="20dp"
            android:text="Sign Out"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30sp" />
    </RelativeLayout>
</RelativeLayout>
 </ScrollView>
</FrameLayout>